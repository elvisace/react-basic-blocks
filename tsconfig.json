{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "declaration": true,
    "outDir": "build"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/**.test.tsx",
    "src/**/**.test.ts",
    "src/**/**.stories.tsx",
    "build"
  ]
}
