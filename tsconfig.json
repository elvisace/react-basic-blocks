{
    "compilerOptions": {
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "allowJs": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "isolatedModules": true,
      "baseUrl": "src",
      "jsx": "react",
      "declaration": true,
      "outDir": "build"
    },
    "include": ["src"],
    "exclude": ["node_modules", "src/**/**.test.tsx", "src/**/**.test.ts", "build"]
  }